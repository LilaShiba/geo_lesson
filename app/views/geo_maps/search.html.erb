<h1> Doggos! </h1>
<section class ='container'>
	<%= form_tag display_path, method: "get", html: { class: "form" } do %>
 	<div class="form-group col-sm-6 col-md-offset-3">
   	<%= text_field_tag(:location, "", placeholder: "Enter Neighborhood", class: "form-control") %>
 	</div>

 	<div class="form-group col-sm-6 col-md-offset-3">
   	<%= text_field_tag(:what, "", placeholder: "Enter What", class: "form-control") %>
 	</div>

 	<center><div class="form-group col-sm-12">
 	<%=submit_tag "Search", class: "btn btn-info"%>
	<% end %>
	</div></center>
</section>
</body>